<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageAndroid"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="213dp"
            android:src="@drawable/image">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingTop="30mm"
            android:layout_weight="100"
            android:background="@color/black"
            android:orientation="vertical">



            <Button
                android:id="@+id/new_game"
                android:layout_width="400px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:backgroundTint="#B6B1B1"
                android:lines="1"
                android:padding="10px"
                android:text="New game"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/continue_game"
                android:layout_width="400px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:backgroundTint="#B6B1B1"
                android:lines="1"
                android:padding="10px"
                android:text="Continue Game"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/help_game"
                android:layout_width="400px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:backgroundTint="#B6B1B1"
                android:lines="1"
                android:padding="10px"
                android:text="Help Game"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/quick_game"
                android:layout_width="400px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:backgroundTint="#B6B1B1"
                android:lines="1"
                android:padding="10px"
                android:text="Quick Game"
                android:textColor="@color/black"></Button>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>